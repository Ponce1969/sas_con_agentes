# ========================================
# CONFIGURACIÓN GENERAL
# ========================================
ENVIRONMENT=development
PROJECT_NAME=Neural SaaS Platform
PROJECT_DESCRIPTION=Plataforma SaaS de Agentes de IA para Python
PROJECT_VERSION=0.1.0

# ========================================
# PUERTOS (para evitar conflictos con otros servicios)
# ========================================
# Puertos HOST (los que usas en localhost)
POSTGRES_PORT_HOST=5433
REDIS_PORT_HOST=6380
BACKEND_PORT_HOST=8001
FRONTEND_PORT_HOST=8502

# Puertos internos de la aplicación (no cambiar)
FASTAPI_PORT=8000
STREAMLIT_PORT=8501

# ========================================
# BASE DE DATOS POSTGRESQL
# ========================================
POSTGRES_USER=neural_user
POSTGRES_PASSWORD=CAMBIAR_EN_PRODUCCION
POSTGRES_DB=neural_saas_db
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://neural_user:CAMBIAR_EN_PRODUCCION@db:5432/neural_saas_db

# ========================================
# SEGURIDAD Y JWT
# ========================================
JWT_SECRET_KEY=CAMBIAR_ESTE_SECRET_KEY_EN_PRODUCCION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========================================
# GEMINI API
# ========================================
GEMINI_API_KEY=tu_api_key_aqui

# Modelos disponibles (todos con capa gratuita):
# - gemini-1.5-flash (actual, rápido y eficiente)
# - gemini-2.0-flash-exp (experimental, más rápido)
# - gemini-2.5-flash (futuro, cuando esté disponible)
GEMINI_MODEL=gemini-1.5-flash

# URL base de la API de Gemini
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# ========================================
# REDIS (para Celery)
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ========================================
# CELERY
# ========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# CORS
# ========================================
ALLOWED_ORIGINS=http://localhost:8502,http://localhost:8501,http://localhost:3000,http://frontend:8501

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO

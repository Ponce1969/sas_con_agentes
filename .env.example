# ========================================
# CONFIGURACIÓN GENERAL
# ========================================
APP_ENV=development
ENVIRONMENT=development
PROJECT_NAME=Neural SaaS Platform
PROJECT_DESCRIPTION=Plataforma SaaS de Agentes de IA para Python
PROJECT_VERSION=0.1.0

# ========================================
# PUERTOS (para evitar conflictos con otros servicios)
# ========================================
POSTGRES_PORT_HOST=5433
REDIS_PORT_HOST=6380
BACKEND_PORT_HOST=8001
FRONTEND_PORT_HOST=8502
FASTAPI_PORT=8000
STREAMLIT_PORT=8501

# ========================================
# BASE DE DATOS POSTGRESQL
# ⚠️ CAMBIAR EN PRODUCCIÓN
# ========================================
POSTGRES_USER=neural_user
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
POSTGRES_DB=neural_saas_db
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://neural_user:CHANGE_ME_GENERATE_SECURE_PASSWORD@db:5432/neural_saas_db

# ========================================
# SEGURIDAD Y JWT
# ⚠️ CAMBIAR EN PRODUCCIÓN - Generar con: python -c "import secrets; print(secrets.token_urlsafe(64))"
# ========================================
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_SECRETS_TOKEN_URLSAFE_64
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========================================
# ENCRIPTACIÓN DE API KEYS
# ⚠️ CAMBIAR EN PRODUCCIÓN - Generar con: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ========================================
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_SECRETS_TOKEN_URLSAFE_32
ENCRYPTION_SALT=CHANGE_ME_GENERATE_WITH_SECRETS_TOKEN_HEX_16

# ========================================
# GEMINI API
# ⚠️ OBTENER DE: https://aistudio.google.com/app/apikey
# ========================================
GEMINI_API_KEY=CHANGE_ME_YOUR_GEMINI_API_KEY
GEMINI_MODEL=gemini-2.5-flash

# ========================================
# REDIS (para Celery)
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ========================================
# CELERY
# ========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# CORS
# ========================================
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000,http://frontend:8501

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
